<head>
  <!-- Meta -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= "#{t('master_school')} | #{t('title')}" %>">
  <meta name="author" content="jiunjiun">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">

  <title>Alohaha | 桃園航班資訊</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
  <%= analytics_init %>
</head>

<body class="theme-clean main-menu-animated" cz-shortcut-listen="true">

  <div id="main-wrapper">
    <%= render partial: "common/header" %>
    <%= render partial: "common/nav" %>

    <div id="content-wrapper">
      <article id="<%= params[:controller] %>">
        <%= yield %>
      </article>
    </div>
  </div>

  <div id="main-menu-bg"></div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
