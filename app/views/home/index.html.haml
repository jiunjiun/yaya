.row#home
  .col.s12
    %ul.tabs
      %li.tab.col.s6
        %a.active{:href => "#arrivals"}= t('arrivals')
      %li.tab.col.s6
        %a{:href => "#departure"}= t('departure')
  #arrivals.col.s12
    %table.striped
      %thead
        %tr
          %th{"data-field" => "flight_code_name"}= t('helpers.flight_code_name')
          %th{"data-field" => "terminal"}= t('helpers.terminal')
          %th{"data-field" => "baggage_carousel"}= t('helpers.baggage_carousel')
          %th{"data-field" => "departure"}= t('helpers.departure')
          %th{"data-field" => "time_status"}= t('helpers.time_status')
      %tbody
        - @flight_arrivals.each do |flight|
          %tr
            %td= flight_code_name(flight)
            %td= flight.terminal
            %td= flight.baggage_carousel
            %td= flight.destination.zh
            %td= time_status(flight.expected_datetime, flight.flight_status)

  #departure.col.s12
    %table.striped
      %thead
        %tr
          %th{"data-field" => "flight_code_name"}= t('helpers.flight_code_name')
          %th{"data-field" => "terminal"}= t('helpers.terminal')
          %th{"data-field" => "check_in_counter"}= t('helpers.check_in_counter')
          %th{"data-field" => "destination"}= t('helpers.destination')
          %th{"data-field" => "time_status"}= t('helpers.time_status')
      %tbody
        - @flight_departure.each do |flight|
          %tr
            %td= flight_code_name(flight)
            %td= flight.terminal
            %td= flight.check_in_counter
            %td= flight.destination.zh
            %td= time_status(flight.expected_datetime, flight.flight_status)


